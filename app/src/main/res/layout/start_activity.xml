<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.myapplication.startActivity"
    android:background="@drawable/hadahouwa">
    <Button
        android:id="@+id/button2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="  English"
        android:drawableLeft="@drawable/fallag"
        android:layout_centerInParent="true"

        />

    <Button
        android:id="@+id/button3"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:drawableLeft="@drawable/fran"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="  Francais"
        android:layout_above="@+id/button2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TVSC"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="Score"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:text="   choose the language to learn :"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_above="@id/button3"
        android:layout_marginBottom="40dp"
        android:textSize="30sp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_marginTop="@dimen/a30"
        android:layout_centerHorizontal="true"
        app:lottie_fileName="animation-w350-h350.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

</RelativeLayout>
