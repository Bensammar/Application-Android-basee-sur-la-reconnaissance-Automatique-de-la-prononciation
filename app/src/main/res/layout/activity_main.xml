<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btbt"
    >

    <Button
            android:id="@+id/speak"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_speak"
            />

    <Button
        android:id="@+id/next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/a10"
        android:layout_marginRight="@dimen/a10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_next"/>
    <Button
        android:id="@+id/help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/a10"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:textColor="#fff"
        android:textSize="1dp"
        android:background="@drawable/button_jeton"/>

    <ImageView
        android:id="@+id/flag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img"
        android:layout_marginTop="35dp"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:src="@drawable/cat"
        app:civ_border_width="4dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="@color/vert"
        />

    <TextView
        android:id="@+id/caption_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="37dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="27dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/imgname"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:layout_below="@+id/caption_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/for_textview"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingVertical="@dimen/a10"
        android:textAlignment="center"
        android:textColor="#ffc200"
        android:layout_marginTop="20dp"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/jet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffc200"
        android:layout_below="@id/help"
        android:layout_marginLeft="9dp"
        android:textSize="15sp"
        android:layout_marginTop="2dp"
        android:text="Token"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffc200"
        android:layout_below="@id/aide"
        android:textSize="16sp"
        android:layout_marginTop="1dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:text="aide"
        android:textAlignment="center"
        />
    <Button
        android:id="@+id/aide"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_chat"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />


</RelativeLayout>