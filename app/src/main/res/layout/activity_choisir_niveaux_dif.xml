<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.myapplication.choisir_niveaux_dif"
    android:background="@drawable/hadahouwa">

    <Button
        android:id="@+id/moyen"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:background="@drawable/difdeux_buttons"
        android:text="moyen" />

    <Button
        android:id="@+id/facile"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/moyen"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@drawable/dif_buttons"
        android:text="facile" />

    <Button
        android:id="@+id/dificile"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/moyen"
        android:layout_marginTop="60dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@drawable/diftrois_buttons"
        android:text="dificile" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_above="@+id/moyen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="19dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="animation-w700-h700.json"
        app:lottie_loop="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="animation-w1664-h1080.json"
        app:lottie_loop="true" />



</RelativeLayout>
